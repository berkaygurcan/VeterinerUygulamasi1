<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.HomeFragment">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="#fff7e9"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:id="@+id/sanalKarneLayout"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/virtualcard"
                        app:civ_border_color="#2c6087"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="Pet Sanal Karne"
                        android:textColor="#41bce6"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/okikon" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="#fff7e9"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:id="@+id/asiTakipLayout"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/calander"
                        app:civ_border_color="#2c6087"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Pet Aşı Takibi"

                        android:textColor="#41bce6"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/okikon" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="#fff7e9"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="20dp">


                <LinearLayout
                    android:id="@+id/petlerimLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/pets"
                        app:civ_border_color="#2c6087"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Petlerim"
                        android:textColor="#41bce6"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/okikon" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="#fff7e9"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="20dp">


                <LinearLayout
                    android:id="@+id/kampanyaLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/kampanya"
                        app:civ_border_color="#2c6087"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Kampanyalar"
                        android:textColor="#41bce6"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/okikon" />

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="#fff7e9"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="20dp">


                <LinearLayout
                    android:id="@+id/sorusorlinearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/questions"
                        app:civ_border_color="#2c6087"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Soru Sor"
                        android:textColor="#41bce6"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/okikon" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="#fff7e9"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="20dp">


                <LinearLayout
                    android:id="@+id/cevapLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"

                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/answers"
                        app:civ_border_color="#2c6087"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:text="Cevaplar"
                        android:textColor="#41bce6"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="65dp"
                        android:layout_margin="15dp"
                        android:layout_weight="2"
                        android:src="@drawable/okikon" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>